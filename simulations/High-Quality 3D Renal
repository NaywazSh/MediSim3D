<body>

    <div id="loading" class="loading-screen">Rendering Living Anatomy...</div>

    <div id="ui-overlay">
        <div class="title-card">
            <h1>Renal System</h1>
            <div class="subtitle">RETROPERITONEAL VIEW • ACTIVE BLOOD FILTRATION</div>
        </div>
    </div>

    <div id="info-panel" class="info-panel">
        <div id="info-title" class="info-title">Kidney</div>
        <div id="info-text" class="info-text">Select an organ to inspect anatomy.</div>
    </div>

    <div id="controls-hint">DRAG TO ROTATE • SCROLL TO ZOOM • HOVER TO IDENTIFY</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script>
        let scene, camera, renderer, systemGroup, raycaster, mouse;
        let intersected = null;
        const clock = new THREE.Clock();

        const ANATOMY_DATA = {
            'Right Kidney': 'Filters waste from blood to produce urine. Situated slightly lower than the left to accommodate the liver.',
            'Left Kidney': 'Primary organ of the renal system. Contains approx. 1 million nephrons for filtration.',
            'Adrenal Gland': 'Endocrine glands sitting atop the kidneys that produce hormones like adrenaline and cortisol.',
            'Abdominal Aorta': 'The largest artery in the abdominal cavity, supplying oxygenated blood to the kidneys via renal arteries.',
            'Inferior Vena Cava': 'Large vein carrying deoxygenated blood from the kidneys and lower body back to the heart.',
            'Renal Pelvis': 'Funnel-like dilated part of the ureter in the kidney that channels urine into the ureter.',
            'Ureter': 'Muscular tubes that propel urine from the kidneys to the urinary bladder.',
            'Stomach (Ghost)': 'The digestive organ positioned anterior to the left kidney and pancreas.',
            'Descending Colon': 'Part of the digestive system passing anteriorly to the left kidney.'
        };

        function init() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(45, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(0, 2, 10);

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            renderer.shadowMap.enabled = true;
            document.body.appendChild(renderer.domElement);

            // Lighting
            const ambient = new THREE.AmbientLight(0x404060, 0.5);
            scene.add(ambient);

            const spot1 = new THREE.SpotLight(0xffffff, 1);
            spot1.position.set(10, 15, 10);
            spot1.castShadow = true;
            scene.add(spot1);

            const rimLight = new THREE.PointLight(0x6677ff, 0.8);
            rimLight.position.set(-10, -5, -5);
            scene.add(rimLight);

            systemGroup = new THREE.Group();
            scene.add(systemGroup);

            createAnatomy();

            raycaster = new THREE.Raycaster();
            mouse = new THREE.Vector2();

            // Interaction
            let isDragging = false;
            let prevMouse = { x: 0, y: 0 };

            window.addEventListener('mousedown', () => isDragging = true);
            window.addEventListener('mouseup', () => isDragging = false);
            window.addEventListener('mousemove', (e) => {
                mouse.x = (e.clientX / window.innerWidth) * 2 - 1;
                mouse.y = -(e.clientY / window.innerHeight) * 2 + 1;
                
                if (isDragging) {
                    systemGroup.rotation.y += (e.clientX - prevMouse.x) * 0.01;
                    systemGroup.rotation.x += (e.clientY - prevMouse.y) * 0.01;
                }
                prevMouse = { x: e.clientX, y: e.clientY };
            });

            window.addEventListener('resize', onWindowResize);

            // Hide loading
            setTimeout(() => {
                document.getElementById('loading').style.opacity = '0';
                setTimeout(() => document.getElementById('loading').remove(), 500);
            }, 1000);

            animate();
        }

        function createAnatomy() {
            const renalMat = new THREE.MeshStandardMaterial({ 
                color: 0x8b3a3a, 
                roughness: 0.3, 
                metalness: 0.1,
                bumpScale: 0.05
            });

            const vesselMatRed = new THREE.MeshStandardMaterial({ color: 0xaa2222 });
            const vesselMatBlue = new THREE.MeshStandardMaterial({ color: 0x2244aa });
            const glandMat = new THREE.MeshStandardMaterial({ color: 0xccaa44, roughness: 0.6 });
            
            // 1. KIDNEYS (Bean Shape via Lattice-like Deformation)
            const createKidney = (side) => {
                const geo = new THREE.SphereGeometry(1, 32, 32);
                geo.scale(0.8, 1.4, 0.6);
                const pos = geo.attributes.position;
                const v = new THREE.Vector3();
                for(let i=0; i<pos.count; i++) {
                    v.fromBufferAttribute(pos, i);
                    // Hilum indentation (the "bean" notch)
                    if (side === 'left') {
                        if (v.x > 0 && Math.abs(v.y) < 0.5) v.x *= 0.6;
                    } else {
                        if (v.x < 0 && Math.abs(v.y) < 0.5) v.x *= 0.6;
                    }
                    pos.setXYZ(i, v.x, v.y, v.z);
                }
                const kidney = new THREE.Mesh(geo, renalMat.clone());
                kidney.userData.name = side === 'left' ? 'Left Kidney' : 'Right Kidney';
                return kidney;
            };

            const leftKidney = createKidney('left');
            leftKidney.position.set(-2, 0.5, 0);
            leftKidney.rotation.z = 0.1;
            systemGroup.add(leftKidney);

            const rightKidney = createKidney('right');
            rightKidney.position.set(2, 0, 0);
            rightKidney.rotation.z = -0.1;
            systemGroup.add(rightKidney);

            // 2. ADRENAL GLANDS
            const glandGeo = new THREE.ConeGeometry(0.4, 0.5, 4);
            glandGeo.scale(1, 0.5, 1.5);
            const leftGland = new THREE.Mesh(glandGeo, glandMat);
            leftGland.position.set(-2.1, 1.8, 0);
            leftGland.userData.name = 'Adrenal Gland';
            systemGroup.add(leftGland);

            const rightGland = new THREE.Mesh(glandGeo, glandMat);
            rightGland.position.set(2.1, 1.3, 0);
            rightGland.userData.name = 'Adrenal Gland';
            systemGroup.add(rightGland);

            // 3. GREAT VESSELS (Aorta & Vena Cava)
            const vCava = new THREE.Mesh(new THREE.CylinderGeometry(0.35, 0.35, 8, 20), vesselMatBlue);
            vCava.position.set(0.6, 0, -0.5);
            vCava.userData.name = 'Inferior Vena Cava';
            systemGroup.add(vCava);

            const aorta = new THREE.Mesh(new THREE.CylinderGeometry(0.3, 0.3, 8, 20), vesselMatRed);
            aorta.position.set(-0.4, 0, -0.6);
            aorta.userData.name = 'Abdominal Aorta';
            systemGroup.add(aorta);

            // 4. RENAL ARTERIES & VEINS
            const createVessel = (w, h, color, name, x, y, rot) => {
                const mesh = new THREE.Mesh(new THREE.CylinderGeometry(w, w, h), new THREE.MeshStandardMaterial({color}));
                mesh.position.set(x, y, -0.2);
                mesh.rotation.z = rot;
                mesh.userData.name = name;
                systemGroup.add(mesh);
            };

            createVessel(0.12, 1.8, 0xaa2222, 'Abdominal Aorta', -1.2, 0.4, 1.5); // Left Renal Artery
            createVessel(0.12, 1.8, 0xaa2222, 'Abdominal Aorta', 1.2, -0.1, 1.5);  // Right Renal Artery
            createVessel(0.15, 1.8, 0x2244aa, 'Inferior Vena Cava', -1.2, 0.6, 1.5); // Left Renal Vein
            createVessel(0.15, 1.8, 0x2244aa, 'Inferior Vena Cava', 1.2, 0.1, 1.5);  // Right Renal Vein

            // 5. URETERS
            const createUreter = (xStart, yStart) => {
                const curve = new THREE.CatmullRomCurve3([
                    new THREE.Vector3(xStart, yStart, 0),
                    new THREE.Vector3(xStart * 0.8, yStart - 2, 0.5),
                    new THREE.Vector3(xStart * 0.4, yStart - 4, 1)
                ]);
                const geo = new THREE.TubeGeometry(curve, 20, 0.08, 8, false);
                const mesh = new THREE.Mesh(geo, new THREE.MeshStandardMaterial({color: 0xeeeebb}));
                mesh.userData.name = 'Ureter';
                systemGroup.add(mesh);
            }
            createUreter(-2, 0);
            createUreter(2, -0.5);

            // 6. DIGESTIVE CONTEXT (Ghosted)
            const stomachGeo = new THREE.SphereGeometry(1.5, 32, 32);
            stomachGeo.scale(1.2, 1.5, 0.8);
            const ghostMat = new THREE.MeshStandardMaterial({ 
                color: 0xffaaaa, 
                transparent: true, 
                opacity: 0.15,
                wireframe: true
            });
            const stomach = new THREE.Mesh(stomachGeo, ghostMat);
            stomach.position.set(-1.5, 1, 2);
            stomach.userData.name = 'Stomach (Ghost)';
            systemGroup.add(stomach);
        }

        function onWindowResize() {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        }

        function animate() {
            requestAnimationFrame(animate);
            const t = clock.getElapsedTime();

            // Living Organic Movements (Breathing & Pulsing)
            systemGroup.children.forEach(child => {
                if (child.userData.name && child.userData.name.includes('Kidney')) {
                    // Slight breathing scale
                    const pulse = 1 + Math.sin(t * 1.5) * 0.015;
                    child.scale.set(pulse, pulse, pulse);
                }
                if (child.userData.name === 'Abdominal Aorta') {
                    // Rapid arterial pulse
                    const heartBeat = 1 + Math.sin(t * 4) * 0.02;
                    child.scale.x = child.scale.z = heartBeat;
                }
            });

            // Hover logic
            raycaster.setFromCamera(mouse, camera);
            const intersects = raycaster.intersectObjects(systemGroup.children);
            const panel = document.getElementById('info-panel');

            if (intersects.length > 0) {
                const obj = intersects[0].object;
                const name = obj.userData.name;
                
                if (name && ANATOMY_DATA[name]) {
                    panel.style.display = 'block';
                    document.getElementById('info-title').innerText = name;
                    document.getElementById('info-text').innerText = ANATOMY_DATA[name];
                    
                    if (intersected !== obj) {
                        if (intersected && intersected.material.emissive) intersected.material.emissive.setHex(0x000000);
                        intersected = obj;
                        if (intersected.material.emissive) intersected.material.emissive.setHex(0x442222);
                    }
                }
            } else {
                if (intersected && intersected.material.emissive) intersected.material.emissive.setHex(0x000000);
                intersected = null;
                panel.style.display = 'none';
            }

            renderer.render(scene, camera);
        }

        init();
    </script>
</body>
</html>
